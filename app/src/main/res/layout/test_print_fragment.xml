<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btLongOperation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Длинная операция" />

    <Button
        android:id="@+id/btOpenPrintLabelDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Открыть диалог печати" />

    <Button
        android:id="@+id/btOpenPrinterDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Открыть диалог выбора принтера" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
</LinearLayout>